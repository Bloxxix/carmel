{
  "name": "intro",
  "routes": {
    "main": {
      "title": "Welcome",
      "desktopTitle": "Start",
      "icon": "home",
      "forceNavigation": true,
      "skipExtendedMenuOnDesktop": true,
      "extendedMenu": [
        {
          "id": "beta",
          "title": "Beta",
          "path": "/beta"
        },
        {
          "id": "team",
          "title": "Team",
          "path": "/team"
        },
        {
          "id": "roadmap",
          "title": "Roadmap",
          "path": "/roadmap"
        }
      ],
      "components": {
        "intro": {
          "source": "summary",
          "text": "local://intro",
          "image": "carmel.svg",
          "textColor": "#37474F"
        },
        "pillars": {
          "source": "benefits",
          "benefits": [
            { "text": "local://tweak", "image": "tweak.svg" },
            { "text": "local://reputation", "image": "reputation.svg" },
            { "text": "local://market", "image": "market.svg" }
          ],
          "textColor": "#37474F",
          "backgroundColor": "#F3FFFF"
        },
        "video": {
          "source": "presentation",
          "backgroundColor": "#ffffff",
          "text": "local://intro",
          "url": "https://www.youtube.com/watch?v=qrHBVDbrOOY",
          "image": "presentation.png",
          "textColor": "#37474F"
        },
        "reasons": {
          "source": "columns",
          "text": "local://tokens",
          "backgroundColor": "#F3FFFF",
          "iconColor": "#00bcd4",
          "data": "https://raw.githubusercontent.com/fluidtrends/carmel/master/chunks/intro/data/tokenInfo.json"
        }
      },
      "path": "/",
      "events": {
        "cover": "system://buy",
        "team": "local://team",
        "chris": "local://whitepaper",
        "buy": "local://tokens",
        "distribution": "local://whitepaper/tokens",
        "economy": "local://whitepaper/economy",
        "architecture": "local://whitepaper/architecture",
        "security": "local://whitepaper/security",
        "challenges": "local://whitepaper/challenges"
      },
      "startOperationsOnMount": false,
      "operations": {
        "newTransaction": [
          "rest://create/tokens/purchases#newTransaction",
          {
            "onSuccess": "transactionOk",
            "onError": "transactionError"
          }
        ],
        "getContext": [
          "firebase://retrieve/context?latest=1#freshContext",
          {
            "onSuccess": "gotContext"
          }
        ]
      }
    },
    "team": {
      "title": "Team",
      "icon": "favorite",
      "path": "/team",
      "action": true,
      "events": {
        "cover": "system://team"
      },
      "cover": {
        "backgroundColor": "#61AFE1",
        "align": "bottom",
        "opacity": 0.9,
        "navigation": true,
        "title": "Meet The Team",
        "type": "presentation",
        "image": "https://raw.githubusercontent.com/fluidtrends/carmel/master/assets/people.png",
        "imageSmall": "https://raw.githubusercontent.com/fluidtrends/carmel/master/assets/people.png"
      }
    },
    "roadmap": {
      "title": "Roadmap",
      "icon": "supervisor_account",
      "path": "/roadmap",
      "cover": {
        "backgroundColor": "#61AFE1",
        "align": "bottom",
        "opacity": 0.9,
        "navigation": true,
        "title": "#RoadTo1B",
        "type": "presentation",
        "image": "https://raw.githubusercontent.com/fluidtrends/carmel/master/assets/distribution.png",
        "imageSmall": "https://raw.githubusercontent.com/fluidtrends/carmel/master/assets/distribution.png"
      }
    },
    "beta": {
      "title": "Beta",
      "icon": "supervisor_account",
      "path": "/beta",
      "events": {
        "cover": "https://t.me/carmelbeta"
      },
      "cover": {
        "backgroundColor": "#61AFE1",
        "align": "bottom",
        "opacity": 0.6,
        "navigation": true,
        "title": "Become An Early Adopter",
        "primaryActionTitle": "Get Early Access",
        "link": "https://t.me/carmelbeta",
        "type": "default",
        "image": "beta.r.png"
      }
    },
    "terms": {
      "title": "Terms",
      "icon": "supervisor_account",
      "path": "/terms",
      "cover": {
        "backgroundColor": "#00838F",
        "align": "bottom",
        "opacity": 0.5,
        "image": "background-stars.r.png",
        "navigation": true,
        "title": "Carmel Terms and Conditions",
        "type": "simple"
      },
      "components": {
        "intro": {
          "source": "summary",
          "text": "local://terms",
          "image": "carmel-logo.png",
          "textColor": "#37474F"
        }
      }
    }
  }
}
