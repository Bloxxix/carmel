{
  "name": "@carmel/platform",
  "version": "1.2.1",
  "description": "The Carmel Platform",
  "main": ".webpack/main",
  "scripts": {
    "start": "node node_modules/react-electron-chunky/bin/start",
    "test": "react-savor test",
    "coverage": "react-savor coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fluidtrends/carmel.git"
  },
  "homepage": "http://www.carmel.io",
  "config": {
    "forge": "./node_modules/react-electron-chunky/app/config.js"
  },
  "babel": {
    "plugins": [
      "@babel/plugin-proposal-object-rest-spread",
      "@babel/plugin-transform-destructuring",
      "@babel/plugin-transform-react-jsx",
      "@babel/plugin-proposal-class-properties",
      "styled-jsx/babel",
      "babel-plugin-macros"
    ],
    "presets": [
      "@babel/react",
      "@babel/env"
    ]
  },
  "dependencies": {
    "react-electron-chunky": "^1.3.0"
  },
  "devDependencies": {
    "electron": "^6.0.11",
    "react-savor": "^1.1.3"
  }
}
